<div class="card">
 <div class="col">
  <div class="card-body text-center">
    <div class="card-header bg-info text-white">
      <ul class="nav nav-tabs card-header-tabs bg-info text-white">

        <li class="nav-item">
          <a class="nav-link active" href="/trail/{{id}}">Hike</a>
          {{!-- link to sinlge post += add-comment  --}}
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">See Comments</a>
        </li>
      </ul>
    </div>

  <div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">

    <div class="col-md-4">
      <img src="images/200x200.gif" alt="hikeimageplaceholder">
    </div>

    <div class="col-md-8">
    <div class="card-body-winter">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">{{location}}</p>
    <ul class="list-group list-group-flush">
    <li class="list-group-item">Current weather: {{{hike weather}}}</li>
    <li class="list-group-item">Difficulty: {{difficulty}}</li>
    <li class="list-group-item">Category: {{category}}</li>
    <li class="list-group-item">Best season to hike: {{season}}</li>
    <li class="list-group-item">

      <form class="form-inline">
      <div class="form-group mb-2">
        <input type="hikeinput" class="form-control" id="inputHike" placeholder="Hike Comment">
      </div>
      <button type="submit" class="btn btn-info mb-2" >Add Comment</button>
    </form></li>

    </ul>
      </div>
    </div>
  </div>
</div>

</div>
</div>

  <div class="">
  <b>{{user.username}}</b> {{format_date created_date}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</div>
