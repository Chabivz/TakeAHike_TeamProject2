<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.name}}
    </div>
    <div class="text">
      {{comment}}
    </div>
  </section>
  {{/each}}
   <b>{{user.name}}</b>|
                        <a href="/trail/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>

<script src="/javascript/comment.js"></script>
