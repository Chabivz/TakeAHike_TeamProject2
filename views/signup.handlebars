<div class="column">
  <h2 class="title pb-4">Create A New Account</h2>
  <hr />
  <form class="signup-form">
    <div>
      <label for="username-signup">Name:</label>
      <input class type="text" id="username-signup" placeholder="Hiker" />
    </div>
    <div>
      <label for="email-signup">Email:</label>
      <input
        class="email-signup"
        type="text"
        id="email-signup"
        placeholder="hiker@takeahike.com"
      />
    </div>
    <div>
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" placeholder="Password" />
    </div>
    <div>
      <label for="password2-signup">Confirm password:</label>
      <input type="password" id="password2-signup" placeholder="Re-type password" />
    </div>
    <div>
      <button class="button is-primary" type="submit">Signup</button>
    </div>
  </form>
</div>

<!-- javascript file-->
<script src="./js/signup.js"></script>